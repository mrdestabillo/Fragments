<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/characterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="-50dp">
            <ImageView
                android:id="@+id/dogImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIBO"
                android:textColor="#D4AF37"
                android:textSize="20sp"
                android:fontFamily="@font/home_video"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/catImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"
                android:scaleX="-1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUMA"
                android:textColor="#90EE90"
                android:textSize="20sp"
                android:fontFamily="@font/home_video"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/dialogBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/dialog_background"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/characterLayout"
        app:layout_constraintBottom_toTopOf="@id/tapToContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/dialogueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="&quot;HEY... YOU MADE IT.&quot;"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/home_video"
            android:textAlignment="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/speakerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-KIBO"
        android:textColor="#D4AF37"
        android:textSize="18sp"
        android:fontFamily="@font/home_video"
        app:layout_constraintTop_toBottomOf="@id/dialogBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tapToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[TAP TO CONTINUE]"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/home_video"
        android:letterSpacing="0.1"
        android:shadowColor="#898989"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="0.01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>